{
  "name": "sigma-ui-controls",
  "version": "0.0.11",
  "description": "**This is ui controls plugin for video players**",
  "main": "dist/sm-ui-controls.min.js",
  "types": "lib/index.d.ts",
  "style": "dist/sm-ui-controls.min.css",
  "files": [
    "dist/",
    "lib/"
  ],
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack",
    "build:dev": "webpack && cp ./dist/* && cp ./dist/* ../demo",
    "dev": "webpack serve --live-reload --open --config-name debug --port 8089",
    "prepare": "husky",
    "release": "release-it",
    "lint:fix": "eslint src/ --fix",
    "prettier": "prettier 'src/**/*.{js,ts,css,html}' --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sigmadrm/sigma-ui-controls.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/sigmadrm/sigma-ui-controls.git#readme.md",
  "release-it": {
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": "angular"
      }
    },
    "hooks": {
      "after:bump": [
        "yarn build",
        "git add ."
      ]
    },
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "push": true
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}"
    },
    "npm": {
      "publish": false
    }
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/helper-module-imports": "7.22.15",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/plugin-proposal-optional-chaining": "7.21.0",
    "@babel/plugin-transform-object-assign": "7.23.3",
    "@babel/preset-env": "7.23.7",
    "@babel/preset-typescript": "7.23.3",
    "@babel/register": "7.23.7",
    "@commitlint/config-conventional": "^19.2.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "@webpack-cli/serve": "^1.7.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.0",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "csv-loader": "^3.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-mocha": "10.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "path": "0.12.7",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^3.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "5.3.3",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "5.8.0",
    "webworkify-webpack": "2.1.5"
  },
  "dependencies": {
    "@commitlint/cli": "^19.3.0",
    "@emotion/css": "^11.13.0",
    "animate.css": "^4.1.1",
    "css-loader": "^7.1.2",
    "es6-shim": "^0.35.6",
    "eventemitter3": "^5.0.1",
    "mini-css-extract-plugin": "^2.9.0",
    "qs": "^6.9.4",
    "style-loader": "^4.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
